<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sacola"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/inserirTexto"
        android:layout_width="354dp"
        android:layout_height="69dp"
        android:layout_marginBottom="14dp"
        android:background="#55FDAFC9"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/listaProdutos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor" />

    <ListView
        android:id="@+id/listaProdutos"
        android:layout_width="351dp"
        android:layout_height="0dp"
        android:layout_marginBottom="88dp"
        android:animationCache="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inserirTexto"
        tools:ignore="MissingConstraints,UnknownId">


    </ListView>

    <Button
        android:id="@+id/inserir"
        android:layout_width="195dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:background="#55FDAFC9"
        android:text="Inserir Produto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>


